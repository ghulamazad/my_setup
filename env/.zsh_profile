export XDG_CONFIG_HOME=$HOME/.config
VIM="nvim"

alias vim="$VIM"

Alien=$XDG_CONFIG_HOME/Alien
DEV_ENV=$HOME/dev
for i in `find -L $Alien`; do
    source $i
done

## All that sweet sweet fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

export GOPATH=$HOME/.local/go
export GIT_EDITOR=$VIM
export N_PREFIX="$HOME/.local/n"
export DEV_ENV_HOME="$HOME/Alien/dev"

dev_env() {

}

# Where should I put you?
bindkey -s ^f "tmux-sessionizer\n"

catr() {
    tail -n "+$1" $3 | head -n "$(($2 - $1 + 1))"
}

cat1Line() {
    cat $1 | tr -d "\n"
}


addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ ! -z "$2" ]] || [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

addToPathFront $HOME/.zig
addToPathFront $HOME/.local/.npm-global/bin
addToPathFront $HOME/.local/scripts
addToPathFront $HOME/.local/bin
addToPathFront $HOME/.local/npm/bin
addToPathFront $HOME/.local/n/bin/

addToPathFront $HOME/.local/go/bin
addToPathFront /usr/local/go/bin
addToPath $HOME/.cargo/bin
addToPath $HOME/.local/Alien
addToPath $HOME/.sst/bin
addToPathFront $HOME/.local/zig true # some how zig-0.13 just keeps getting added and i CANNOT find it anywhere

# thanks gt
alias gt='NODE_OPTIONS="--no-deprecation" gt'