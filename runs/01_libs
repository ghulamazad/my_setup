#!/bin/bash
# Simple script to install utilities and tools for Ubuntu 24.04 with i3.

# Update package index and enable repositories
echo "Updating package index and enabling repositories..."
sudo apt-get update -y
sudo add-apt-repository universe -y
sudo add-apt-repository multiverse -y
sudo apt-get update -y

# Install utilities and development tools
echo "Installing packages..."
sudo apt-get install -y \
    unzip \
    ripgrep \
    pavucontrol \
    xclip \
    jq \
    tldr \
    python3 \
    fzf \
    btop \
    bc \
    curl \
    vlc \
    make \
    cmake \
    blueman \
    brightnessctl \
    xdg-utils \
    playerctl \
    pipewire \
    pipewire-bin \
    network-manager-gnome \
    flameshot \
    i3lock \
    ubuntu-restricted-extras \
    ffmpeg

# Verify PipeWire and Bluetooth services
echo "Verifying PipeWire and Bluetooth services..."
systemctl --user status pipewire pipewire-pulse
sudo systemctl status bluetooth

# Add newline for clean output
printf "\n%.0s" {1..2}