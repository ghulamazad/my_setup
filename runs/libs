#!/usr/bin/env bash

sudo dnf -y upgrade

# Install useful utilities and development tools
sudo dnf -y install \
  ripgrep \
  pavucontrol \
  xclip \
  jq \
  tldr \
  shutter \
  python3 \
  gimp \
  fzf \
  btop \
  bc \
  alsa-lib-devel \
  curl \
  vlc \
  make \
  cmake \
  blueman \
  fzf


# ffmpeg \ -- no longer available in Fedora 39
# Install multimedia group
sudo dnf group install multimedia
